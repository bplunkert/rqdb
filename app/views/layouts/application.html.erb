<!DOCTYPE html>
<html>
	<head>
		<title>RQDB</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<div class="container">
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-10" id="title">
					<h1>RQDB</h1>
				</div>
				<div class="col-md-1"></div>			
			</div>
			<div class="row">
				<%= render 'quotes/navbar' %>
			</div>
			<div class="row">
				<div class="col-md-1"></div>			
				<div class="col-md-10 quotes">
					<%= yield %>
				</div>
				<div class="col-md-1"></div>			
			</div>
			<div class="row">
				<%= render 'quotes/navbar' %>
			</div>
			<div class="row">
				<div class="col-md-1"></div>						
				<div class="col-md-10" id="versionbar">
					RQDB Version: pre-alpha
				</div>
				<div class="col-md-1"></div>
			</div>
	</body>
</html>
